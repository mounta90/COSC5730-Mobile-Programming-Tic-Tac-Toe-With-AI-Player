<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.TicTacToe" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="colorPrimaryContainer">@color/white</item>
        <item name="colorOnPrimaryContainer">@color/black</item>

        <item name="colorSecondary">@color/white</item>

        <item name="android:windowBackground">@color/black</item>

        <item name="android:fontFamily">@font/kode_mono</item>
    </style>

    <style name="cvNewGameDialog" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/white</item>
    </style>

    <style name="newGameDialogButtonPlayStyle" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/black</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="newGameDialogButtonCancelStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="backgroundTint">@color/white</item>
        <item name="cornerRadius">10dp</item>
        <item name="strokeColor">@color/black</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="fragmentResultTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">32sp</item>
    </style>
</resources>